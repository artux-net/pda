<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/navbar"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:background="@null"
            android:src="@drawable/ic_close" />

        <TextView
            android:id="@+id/sceneTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/closeButton"
            android:layout_alignBottom="@id/closeButton"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/closeButton"
            android:gravity="center"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/closeButton"
            android:layout_alignBottom="@+id/closeButton"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/musicSetup"
            android:src="@drawable/ic_bug" />

        <ImageView
            android:id="@+id/musicSetup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/closeButton"
            android:layout_alignBottom="@+id/closeButton"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_vol_on" />


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/stageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </FrameLayout>

</LinearLayout>